# ECOncrete API Environment Configuration
NODE_ENV=development
PORT=5000

# Security Configuration
JWT_SECRET=your-generated-jwt-secret-from-previous-setup
SESSION_SECRET=your-generated-session-secret-from-previous-setup

# Database Configuration
SQLITE_DB_PATH=./db/projects.db

# External API Keys
OPENWEATHER_API_KEY=your_openweather_api_key_here
OCEAN_API_KEY=your_ocean_data_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=60
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Monitoring Configuration
MONITORING_ENABLED=true
ERROR_RATE_THRESHOLD=0.05
RESPONSE_TIME_THRESHOLD=2000

# Performance Configuration
QUERY_CACHE_ENABLED=true
API_CACHE_TTL=60000
INTERNAL_API_TOKEN=your-secure-internal-token-change-this

# Enhanced Features
ENABLE_COMPLIANCE_FEATURES=false