# ECOncrete Project Insights Backend Configuration
# Copy this to your backend/.env file

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development
API_VERSION=2.1.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
SQLITE_DB_PATH=./db/econcretedb.sqlite
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=300000

# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24h
DB_BACKUP_RETENTION_DAYS=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=econcrete-jwt-secret-change-in-production-f8e9a2b1c3d4e5f6a7b8c9d0e1f2a3b4
JWT_EXPIRATION=24h
SESSION_SECRET=econcrete-session-secret-change-in-production-a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6
BCRYPT_ROUNDS=12

# CORS settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Enable detailed logging for development
DEBUG_MODE=true
SQL_LOGGING=false

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_TTL_LOOKUPS=600000
CACHE_TTL_PROJECTS=300000
CACHE_TTL_DEFAULT=180000

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@econcrete-insights.com

# =============================================================================
# API INTEGRATION CONFIGURATION (Optional - for external services)
# =============================================================================
# Weather API for environmental data
# WEATHER_API_KEY=your-weather-api-key
# WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# GIS/Mapping services
# MAPBOX_API_KEY=your-mapbox-api-key
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Regulatory database APIs
# REGULATORY_API_KEY=your-regulatory-api-key

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# ANALYTICS_ENABLED=false
# SENTRY_DSN=your-sentry-dsn
# HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable/disable features for development
ENABLE_API_DOCS=true
ENABLE_DETAILED_ERRORS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Auto-reload database schema in development
AUTO_MIGRATE=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# In production, override these values:
# NODE_ENV=production
# PORT=443 or 80
# CORS_ORIGIN=https://your-production-domain.com
# FRONTEND_URL=https://your-production-domain.com
# JWT_SECRET=strong-random-secret
# SESSION_SECRET=strong-random-secret
# LOG_LEVEL=warn
# DEBUG_MODE=false
# ENABLE_DETAILED_ERRORS=false